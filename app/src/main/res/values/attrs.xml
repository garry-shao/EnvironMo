<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Following section used in the custom DotViewPagerIndicator class -->
    <declare-styleable name="DotViewPagerIndicator">
        <attr name="selectedColor" format="reference|color" />
        <attr name="unselectedColor" format="reference|color" />
        <attr name="radius" format="reference|dimension" />
        <attr name="padding" format="reference|dimension" />
    </declare-styleable>

    <color name="default_selected_color">#FFFFFFFF</color>
    <color name="default_unselected_color">#FF888888</color>

    <dimen name="default_radius">4dp</dimen>
    <dimen name="default_padding">7dp</dimen>
    <!-- End of section -->

	<!-- Following section used in the custom SwitchPreferenceCustom class -->
	<declare-styleable name="SwitchPreferenceCustom">
	    <attr name="switchPreferenceDialogTitle" format="reference|string"/>
	    <attr name="switchPreferenceDialogMessage" format="reference|string"/>
	    <attr name="switchPreferenceNegativeButton" format="reference|string"/>
	    <attr name="switchPreferencePositiveButton" format="reference|string"/>
	</declare-styleable>

    <string name="default_switch_preference_title">Warning</string>
    <string name="default_switch_preference_message">May cost money updating, are you SURE ?</string>
	<string name="default_switch_preference_negative_button">No</string>
    <string name="default_switch_preference_positive_button">Yes</string>
	<!-- End of section -->

	<!-- Following section used in the custom ListPreferenceCustom class -->
	<declare-styleable name="ListPreferenceCustom">
	    <attr name="listPrefernceNegativeButton" format="reference|string"/>
	</declare-styleable>

	<string name="default_list_preference_negative_button">Cancel</string>
	<!-- End of section -->

</resources>