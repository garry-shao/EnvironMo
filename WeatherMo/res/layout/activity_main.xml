<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <org.qmsos.weathermo.widget.DotViewPagerIndicator
            android:id="@+id/pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:padding="7dp"
            app:radius="4dp"
            app:selectedColor="@android:color/white"
            app:unselectedColor="@android:color/darker_gray" />

        <fragment
            android:id="@+id/fragment_city_name"
            android:name="org.qmsos.weathermo.fragment.CityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

		<RelativeLayout
			android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginStart="24dp"
        	android:layout_marginEnd="24dp"
        	android:layout_marginBottom="18dp" >
        
			<TextView
	            android:id="@+id/button_map"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:clickable="true"
	            android:gravity="center"
	            android:background="@android:drawable/ic_menu_view" />
	            
	        <TextView
	            android:id="@+id/button_settings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toStartOf="@id/button_map"
	            android:layout_marginEnd="24dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:background="@android:drawable/ic_menu_manage" />
        </RelativeLayout>
            
        <fragment
            android:id="@+id/fragment_weather_forecast"
            android:name="org.qmsos.weathermo.fragment.WeatherForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>